<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Sub address</th>
      <th>Street number</th>
      <th>Street</th>
      <th>City</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.sub_address %></td>
        <td><%= address.street_number %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= Postcode.hash[address.postcode_id].code %></td>
        <td><%= State.hash[address.state_id].name %></td>
        <td><%= Country.hash[address.country_id].name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

